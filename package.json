{
  "scripts": {
    "build": "npm run build:bundle -- --emptyOutDir && npm run build:packs",
    "build:bundle": "vite build",
    "build:watch": "vite build --watch",
    "build:serve": "npm run start",
    "build:packs": "./scripts/pack.mjs",
    "generate:yml": "./scripts/unpack.mjs",
    "clean": "rm -fr dist",
    "format": "prettier --write src/",
    "lint": "eslint --max-warnings 0 src/**/*.{mjs,svelte}",
    "lint:style": "prettier --check src/",
    "start": "npm run foundry & npm run build && vite",
    "foundry": "fvtt launch"
  },
  "imports": {
    "#runtime/*": "@typhonjs-fvtt/runtime/*",
    "#standard/*": "@typhonjs-fvtt/svelte-standard/*"
  },
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.0.2",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "sass": "^1.66.1",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "@typhonjs-fvtt/runtime": "^0.1.2",
    "@typhonjs-fvtt/svelte-standard": "^0.1.0",
    "svelte": "^4.2.0"
  }
}
