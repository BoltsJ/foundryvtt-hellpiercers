<header class="sheet-header">
  <div class="flexcol">
    <div class="flexrow">
      <img
        src={{actor.img}}
        class="portrait"
        data-edit="img"
        data-action="onEditImage"
        title={{actor.name}}
      />
      <h1 class="charname"><input
          name="name"
          type="text"
          value="{{actor.name}}"
          placeholder="{{localize 'Name'}}"
          {{disabled (not editable)}}
        /></h1>
    </div>
    <div class="flexrow">
      <div class="flexcol">
        {{formGroup
          fields.pronouns
          value=system.pronouns
          placeholder="any/all"
          classes="stacked"
          disabled=(not editable)
        }}
        <div class="flexrow">
          <label for="system.health.value">
            {{localize "HELLPIERCERS.ACTOR.FIELDS.health.label"}}</label>
          {{formInput
            fields.health.fields.value
            value=system.health.value
            max=system.health.max
            disabled=(not editable)
          }}/{{system.health.max}}
          {{localize "HELLPIERCERS.ACTOR.FIELDS.speed.label"}}:
          <span style="flex: 0 0 2rem;">{{system.speed}}</span>
        </div>
      </div>
      {{formGroup fields.tags value=system.tags classes="stacked" disabled=(not editable)}}
    </div>
  </div>
</header>