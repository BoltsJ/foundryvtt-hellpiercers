<section class="tab effects {{tab.cssClass}} scrollable" data-group="primary" data-tab="effects">
  {{#if (gt effects.temporary.length 0)}}
    <ol class="temporary">
      <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.effects.temporary"}}</li>
      {{#each effects.temporary as |effect|}}
        <li class="effect flexrow" data-uuid={{effect.uuid}}>
          <img src={{effect.img}} height="20" width="20" />
          <span class="name">
            {{effect.name}}{{#if
              effect.flags.hellpiercers.value
            }}:{{effect.flags.hellpiercers.value}}{{/if}}
          </span>
          <a
            class="control edit"
            data-action="onEmbedSheet"
            data-tooltip={{localize 'DOCUMENT.Update' type=(localize "DOCUMENT.ActiveEffect")}}
          ><i class="fas fa-edit"></i></a>
          <a
            class="control delete"
            data-action="onDeleteEmbed"
            data-tooltip={{localize 'DOCUMENT.Delete' type=(localize "DOCUMENT.ActiveEffect")}}
          ><i class="fas fa-trash"></i></a>
        </li>
      {{/each}}
    </ol>
  {{/if}}
  {{#if (gt effects.items.length 0)}}
    <ol>
      <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.effects.item"}}</li>
      {{#each effects.items as |effect|}}
        <li class="effect flexrow" data-uuid={{effect.uuid}}>
          <img src={{effect.img}} height="20" width="20" />
          <span class="name">
            {{effect.name}}{{#if
              effect.flags.hellpiercers.value
            }}:{{effect.flags.hellpiercers.value}}{{/if}}
          </span>
          <a
            data-action="onEmbedSheet"
            data-uuid={{effect.parent.uuid}}
          >{{effect.parent.name}}</a>
          <input
            type="checkbox"
            data-action="onUpdateEmbed"
            data-property="disabled"
            data-tooltip="EFFECT.Disabled"
            {{checked effect.disabled}}
            {{disabled (not @root.editable)}}
          />
          <a
            class="control edit"
            data-action="onEmbedSheet"
            data-tooltip="{{localize 'DOCUMENT.Update' type=(localize "DOCUMENT.ActiveEffect")}}"
          ><i class="fas fa-edit"></i></a>
        </li>
      {{/each}}
    </ol>
  {{/if}}
  <ol>
    <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.effects.active"}}</li>
    {{#each effects.effects as |effect|}}
      <li class="effect flexrow" data-uuid={{effect.uuid}}>
        {{#if effect.img}}<img src={{effect.img}} height="20" width="20" />{{/if}}
        <span class="name">
          {{effect.name}}{{#if
            effect.flags.hellpiercers.value
          }}:{{effect.flags.hellpiercers.value}}{{/if}}
        </span>
        <input
          type="checkbox"
          data-action="onUpdateEmbed"
          data-property="disabled"
          data-tooltip="EFFECT.Disabled"
          {{checked effect.disabled}}
          {{disabled (not @root.editable)}}
        />
        <a
          class="control edit"
          data-action="onEmbedSheet"
          data-tooltip="{{localize 'DOCUMENT.Update' type=(localize "DOCUMENT.ActiveEffect")}}"
        ><i class="fas fa-edit"></i></a>
        <a
          class="control delete"
          data-action="onDeleteEmbed"
          data-tooltip="{{localize 'DOCUMENT.Delete' type=(localize "DOCUMENT.ActiveEffect")}}"
        ><i class="fas fa-trash"></i></a>
      </li>
    {{/each}}
    <li class="new-effect">
      <button type="button" data-action="onCreateEmbed" data-embed-type="ActiveEffect">
        <i class="fas fa-plus"></i>&nbsp;New Effect
      </button>
    </li>
  </ol>
</section>
