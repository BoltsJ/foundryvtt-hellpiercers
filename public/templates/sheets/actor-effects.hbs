<section class="tab effects {{tab.cssClass}}" data-group="primary" data-tab="effects">
  {{#if (gt effects.temporary.length 0)}}
  <ol class="temporary">
    <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.temporary-effects"}}</li>
    {{#each effects.temporary as |effect|}}
    <li class="effect flexrow" data--u-u-i-d={{effect.uuid}}>
      <img src={{effect.img}} height=20 width=20>
      <span class=name>
        {{effect.name}}{{#if effect.flags.hellpiercers.value}}:{{effect.flags.hellpiercers.value}}{{/if}}
      </span>
      <a class="control edit" data-action="onEmbedSheet" data-tooltip="{{localize "DOCUMENT.Update"
        type=(localize "DOCUMENT.ActiveEffect" )}}"><i class="fas fa-edit"></i></a>
      <a class="control delete" data-action="onDeleteEmbed" data-tooltip="{{localize "DOCUMENT.Delete"
        type=(localize "DOCUMENT.ActiveEffect" )}}"><i class="fas fa-trash"></i></a>
    </li>
    {{/each}}
  </ol>
  {{/if}}
  {{#if (gt effects.items.length 0)}}
  <ol>
    <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.item-effects"}}</li>
    {{#each effects.items as |effect|}}
    <li class="effect flexrow" data--u-u-i-d={{effect.uuid}}>
      <img src={{effect.img}} height=20 width=20>
      <span class="name">
        {{effect.name}}{{#if effect.flags.hellpiercers.value}}:{{effect.flags.hellpiercers.value}}{{/if}}
      </span>
      <a data-action="onEmbedSheet" data--u-u-i-d={{effect.parent.uuid}}>{{effect.parent.name}}</a>
      <input type="checkbox" data-action="onUpdateEmbed" data-property="disabled" data-tooltip="EFFECT.Disabled"
        {{checked effect.disabled}} {{disabled editable}}>
      <a class="control edit" data-action="onEmbedSheet" data-tooltip="{{localize "DOCUMENT.Update"
        type=(localize "DOCUMENT.ActiveEffect" )}}"><i class="fas fa-edit"></i></a>
    </li>
    {{/each}}
  </ol>
  {{/if}}
  <ol>
    <li class="flexrow header">{{localize "HELLPIERCERS.ACTOR.SHEET.active-effects"}}</li>
    {{#each effects.effects as |effect|}}
    <li class="effect flexrow" data--u-u-i-d={{effect.uuid}}>
      {{#if effect.img}}<img src={{effect.img}} height=20 width=20>{{/if}}
      <span class="name">
        {{effect.name}}{{#if effect.flags.hellpiercers.value}}:{{effect.flags.hellpiercers.value}}{{/if}}
      </span>
      <input type="checkbox" data-action="onUpdateEmbed" data-property="disabled" data-tooltip="EFFECT.Disabled"
        {{checked effect.disabled}} {{disabled editable}}>
      <a class="control edit" data-action="onEmbedSheet" data-tooltip="{{localize "DOCUMENT.Update"
        type=(localize "DOCUMENT.ActiveEffect" )}}"><i class="fas fa-edit"></i></a>
      <a class="control delete" data-action="onDeleteEmbed" data-tooltip="{{localize "DOCUMENT.Delete"
        type=(localize "DOCUMENT.ActiveEffect" )}}"><i class="fas fa-trash"></i></a>
    </li>
    {{/each}}
    <li>
      <button type="button" class="new-effect" data-action="onCreateEmbed" data-embed-type="ActiveEffect">
        <i class="fas fa-plus"></i>&nbsp;New Effect
      </button>
    </li>
  </ol>
</section>
